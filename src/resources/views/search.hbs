<div class="search-form mt-4">
  <form method="POST" action="">
    <div class="mb-3">
      <label for="search-input" class="form-label">Input Keyword</label>
      <input name="q" type="text" class="form-control" id="search-input" placeholder="Keyword...">
    </div>
    <div class="mb-3">
      <label for="gender-input" class="form-label">Gender</label>
      <select name="gender" id="gender-input" class="form-control">
        <option value="">--Chose your gender--</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>